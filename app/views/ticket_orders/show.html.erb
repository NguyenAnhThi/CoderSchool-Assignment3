<div class="card">
  <h3 class="card-header">Ticket Order Details</h3>
  <div class="card-block">
    <div class="row">
      <div class="col-sm-2">
        <p>Customer:</p>
        <p>Address:</p>
        <p>Phone:</p>
        <p>Booked at:</p>
      </div>
      <div class="col-sm-10">
        <p><%= @ticket_order.name %></p>
        <p><%= @ticket_order.address %></p>
        <p><%= @ticket_order.phone %></p>
        <p><%= @ticket_order.created_at.strftime(" %l:%M %p - %A, %d %b %Y  ") %></p>
      </div>
    </div>
    <div class="row">
      <table class="table table-bordered table-striped">
        <thead>
        <tr>
          <th>Ticket type</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td><%= @ticket_order.ticket_type.name %></td>
          <td><%= number_to_currency(@ticket_order.ticket_type.price, precision: 0, unit: "VND", delimiter: ",", format: "%n %u") %></td>
          <td class="text-right"><%= @ticket_order.quantity %></td>
          <td><%= number_to_currency(@ticket_order.ticket_type.price * @ticket_order.quantity, precision: 0, unit: "VND", delimiter: ",", format: "%n %u") %></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer text-right" style="text-align: right">
    <%= link_to "Done", root_path, class: 'btn btn-outline-primary' %>
  </div>
</div>