<div class="card">
  <%= form_for [event, ticket_order] do |f| %>
      <div class="card-block">
        <div class="row">
          <div class="col-sm-8">
            <div class="form-group">
              <%= f.label :ticket_type_id %>
              <%= f.select :ticket_type_id, event.ticket_types.collect { |t| [t.name, t.id] }, class: 'form-control' %>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="from-group">
              <%= f.label :quantity %>
              <%= f.select 'quantity', options_for_select(1..10) %>
            </div>
          </div>
        </div>
        <div class="from-group">
          <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
        </div>
        <br>
        <div class="from-group">
          <%= f.text_field :phone, placeholder: 'Phone number', class: 'form-control' %>
        </div>
        <br>
        <div class="from-group">
          <%= f.text_field :address, placeholder: 'Address', placeholder: 'Address', class: 'form-control' %>
        </div>
      </div>
      <div class="card-footer text-right" style="text-align: right">
        <%= f.submit 'Book', class: 'btn btn-success' %>
      </div>
  <% end %>
</div>