<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <h3 class="card-header"> Sign In</h3>
      <%= form_tag sessions_path, id: "session" do %>
          <div class="card-block">

            <div class="form-group">
              <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'email' %>
            </div>
            <div class="form-group">
              <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'password' %>
            </div>

          </div>
          <div class="card-footer text-right" style="text-align: right">
            <%= submit_tag "Sign In", class: 'btn btn-primary', data: {disable_with: "signing in..."} %>
            <%= link_to "Sign In with Facebook", '/auth/facebook', class: 'btn btn-primary', data: {disable_with: "signing in..."} %>
            <%= link_to "Back", root_path, class: 'btn btn-outline-primary' %>
          </div>
      <% end %>
    </div>
  </div>
</div>
