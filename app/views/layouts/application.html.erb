<% console %>
<!DOCTYPE html>
<html>
<head>
  <title>CoderTicket</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
  <a class="navbar-brand" href="<%= root_path %>"> <i class="fa fa-ticket" aria-hidden="true"></i> Coder Ticket <i class="fa fa-tick" aria-hidden="true"></i></a>

  <% if current_user %>
      <ul class="nav navbar-nav float-xs-right">
        <li class="nav-item">
          <a class="nav-link" href="<%= new_event_path %>">
            <i class="fa fa-plus-circle" aria-hidden="true"></i> New Event
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= mine_events_path %>">
            <i class="fa fa-user" aria-hidden="true"></i> My Event
          </a>
        </li>
        <li class="nav-item text-capitalize ">
          <%= link_to "Hi, #{current_user.name}!", nil, class: 'nav-link active ' %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", log_out_path, method: 'delete', class: 'nav-link btn btn-outline-secondary', data: {confirm: 'Are you sure?'} %>
        </li>
      </ul>
  <% else %>
      <ul class="nav navbar-nav float-xs-right">
        <li class="nav-item">
          <a class="nav-link" href="<%= new_user_path %>">Sign Up</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_session_path %>">Log In</a>
        </li>
      </ul>
  <% end %>
</nav>

<div class="container">
  <%= flash_messages %>
  <%= yield %>
</div>
</body>
</html>
